<?xml version="1.0"?>
<config>
    <sections>
        <dev>
            <groups>
                <aoe_translate>
                    <label>AOE Translate</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>100</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <log_level translate="label comment">
                            <label>Translation Logging Level</label>
                            <comment><![CDATA[Log translations based on translation status]]></comment>
                            <frontend_type>select</frontend_type>
                            <source_model>aoe_translate/config_source_level</source_model>
                            <sort_order>100</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </log_level>
                        <missed_pattern translate="label comment">
                            <label>Missed patterns</label>
                            <comment><![CDATA[Missed labels will be displayed with this pattern (where %s is replaced with the missed label)]]></comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>110</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </missed_pattern>
                    </fields>
                </aoe_translate>
            </groups>
        </dev>
    </sections>
</config>
